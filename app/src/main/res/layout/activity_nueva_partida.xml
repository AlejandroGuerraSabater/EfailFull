<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/efailbg">

    <TextView
        android:id="@+id/lblSeleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un personaje"
        android:textColor="@color/contrast_light_gray"
        android:textSize="18sp"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/Caballero"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/caballero" />


        <ImageView
            android:id="@+id/Asesino"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/asesino" />

        <ImageView
            android:id="@+id/Hechicera"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/hechicera" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblPersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/contrast_light_gray"
        android:textSize="12sp"
        android:padding="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/botones"
        android:id="@+id/btnSeleccionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar"
        android:enabled="false"
        android:layout_marginTop="20dp"/>
</LinearLayout>
